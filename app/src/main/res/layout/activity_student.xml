<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E9E8"
    tools:context="com.example.sarvesh.i_turnout.Moderator.Admin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/welcome"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                   android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/studentName"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="40dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/logout"
                    android:background="@color/colorPrimary"
                    android:id="@+id/logout"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom"/>
                    />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/getnotification"
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cerclebackgroundpurple"
                                android:src="@drawable/ic_notifications_active_black_24dp"
                                android:padding="3dp" android:contentDescription="@string/todo"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:id="@+id/action_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:text="@string/get"
                                android:textColor="#000000"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/getnotification1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"

                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="-19dp"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/notification"
                                android:padding="1dp"
                                android:textColor="#000000"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/checkattendance"
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cerclebackgroundpurple"
                                android:src="@drawable/check"
                                android:padding="3dp" android:contentDescription="@string/todo"
                                android:layout_marginTop="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:text="@string/check"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/attendance"
                                android:padding="1dp"
                                android:textColor="#000000"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/makequery"
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cerclebackgroundpurple"
                                android:src="@drawable/ic_chat_black_24dp"
                                android:padding="3dp" android:contentDescription="@string/todo"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:text="@string/make"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/query"
                                android:padding="1dp"
                                android:textColor="#000000"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/viewcourses"
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cerclebackgroundpurple"
                                android:src="@drawable/ic_note_add_black_24dp"
                                android:padding="3dp" android:contentDescription="@string/todo"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:text="@string/view"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/courses"
                                android:padding="1dp"
                                android:textColor="#000000"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/change"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/cerclebackgroundpurple"
                                android:src="@drawable/ic_lock_open_black_24dp"
                                android:padding="3dp"
                                android:contentDescription="@string/todo"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="@string/change"
                                android:textStyle="bold"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary"
                                android:layout_margin="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/password"
                                android:padding="0dp"
                                android:textColor="#000000"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
            </ScrollView>

        </LinearLayout>

</LinearLayout>


